<% if @article.errors.any? %>
  <h2>Cause of the following errors, article not saved</h2>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :article,  url: articles_path, local: true do |f| %>
  <p>
    <strong> <%= f.label :title %> <br></strong>
    <%= f.text_field :title %>
  </p>

  <p>
    <strong> <%= f.label :description %> <br></strong>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>